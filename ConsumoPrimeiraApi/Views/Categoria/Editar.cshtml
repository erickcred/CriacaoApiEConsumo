@model Categoria

@{
    ViewData["Title"] = "Categorias";
}

<form action="/categorias/atualizar" method="post" enctype="application/json" class="mb-3">
    <div class="from-group">
        <input type="number" name="Id" value="@Model.Id"/>
        <input type="text" name="Nome" class="form-control" value="@Model.Nome"/>
        <span asp-validation-for="Nome"></span>
    </div>
    
    <div class="mt-3">
        @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-primary"})
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>


