@model Categoria

@{
    ViewData["Title"] = "Categorias";
}

<form action="/categorias/criar" method="post" enctype="application/json" class="mb-3">
    <div class="from-group">
        <input type="text" name="Nome" class="form-control" placeholder="Nome do produto"/>
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-primary"})
        <button type="submit" class="btn btn-success">Cadastrar</button>
    </div>
</form>


