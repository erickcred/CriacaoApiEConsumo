@model Produto

@{
    ViewData["Title"] = "Produtos";
}

<form action="/produtos/atualizar" method="post" enctype="application/json" class="mb-3">
    <div class="from-group">
        <input type="number" name="Id" value="@Model.Id"/>
        <input type="text" name="Nome" class="form-control" value="@Model.Nome"/>
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="from-group">
        <input type="number" name="Estoque" class="form-control" value="@Model.Estoque"/>
        <span asp-validation-for="Estoque"></span>
    </div>

    <div class="from-group">
        <select name="CategoriaId" class="form-control">
            <option value="@Model.Categoria.Id">@Model.Categoria.Id - @Model.Categoria.Nome</option>
            @foreach (var categoria in (List<Categoria>)ViewData["Categorias"])
            {
                @if (Model.Categoria.Id != categoria.Id)
                {
                    <option value="@categoria.Id">@categoria.Id - @categoria.Nome</option>
                }
            }
        </select>
        @* <span asp-validation-for="CategoriaId"></span> *@
    </div>

    <div class="mt-3">
        @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-primary"})
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>


